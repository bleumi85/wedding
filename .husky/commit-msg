#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

message="$(cat $1)"
requiredPattern="^(\[main\]|\[nestjs-be\]|\[react-fe\]) .*$"
if ! [[ $message =~ $requiredPattern ]];
then
  echo "-"
  echo "-"
  echo "-"
  echo "ðŸš¨ Wrong commit message! ðŸ˜•"
  echo "The commit message must have this format:"
  echo "<project-scope> <what was done>"
  echo "Allowed project-scopes: [main], [nestjs-be], [react-fe]"
  echo "Example: [react-fe] login button"
  echo "-"
  echo "Your commit message was:"
  echo $message
  echo "-"
  echo "For more information, check script in .husky/commit-msg"
  echo "-"
  exit 1
fi